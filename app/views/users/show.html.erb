<% provide(:title, @user.name) %>
<div class="row"> <!-- Bootstrap classes: row, span -->
  <aside class="span4">
    <section>
      <h1>
        <div class="gravatar">
        <% if @user.picture.present? %>
            <a href="<%= @user.picture_url %>"> <%= image_tag(@user.picture_url, :width => 52) %></a>
        <% else %>
            <%= image_tag("default.png", :width => 52) %>
        <% end %>
        </div>

        <%= @user.name %>
      </h1>
    </section>
    <section>
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="span8">
    <%= render 'follow_form' if signed_in? %>
    <% if @user.microposts.any? %>
        <h3>Microposts (<%= @user.microposts.count %>)</h3>
        <ol class="microposts">
          <%= render @microposts %>
        </ol>
        <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>